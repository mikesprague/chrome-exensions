{
  "name": "Delivery Status",
  "description": "Chrome extension that reloads USPS/UPS/FedEx tracking pages every 5 minutes and changes the favicon to indicate 'delivered'",
  "author": "Michael Sprague",
  "short_name": "Delivery Status",
  "icons": {
    "128": "/images/delivery-status-icon.png"
  },
  "version": "0.0.8",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "declarativeContent",
    "https://*.usps.com/*",
    "https://*.ups.com/*",
    "https://*.fedex.com/*",
    "https://*.lasership.com/*",
    "https://raw.githubusercontent.com/mikesprague/delivery-status/master/src/images/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://tools.usps.com/go/TrackConfirmAction_input*",
        "https://wwwapps.ups.com/WebTracking*",
        "https://www.ups.com/*",
        "https://www.fedex.com/*",
        "https://www.lasership.com/track*"
      ],
      "js": ["/js/bundle.js"]
    }
  ]
}
